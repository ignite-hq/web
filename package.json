{
  "name": "root",
  "private": true,
  "description": "A monorepo of Vue and JS packages for Cosmos SDK apps",
  "author": "Tendermint, Inc <hello@tendermint.com>",
  "homepage": "https://github.com/tendermint/vue",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "scripts": {
    "build": "lerna exec --parallel -- npm run build",
    "purge": "lerna exec --parallel -- rm -rf node_modules",
    "bootstrap:local": "lerna bootstrap --force-local",
    "dev:watch": "npm run bootstrap:local && lerna exec --parallel --scope='{@starport/vue,@starport/vuex}' -- npm run dev",
    "dev:serve": "lerna exec --parallel --scope='@starport/template' -- npm run dev",
    "lint:check": "eslint .",
    "lint:format": "eslint --fix .",
    "prettify:check": "prettier --check .",
    "prettify:format": "prettier --write .",
    "code:check": "npm run lint:check && npm run prettify:check",
    "code:format": "npm run lint:format && npm run prettify:format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tendermint/vue.git"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1"
  }
}
