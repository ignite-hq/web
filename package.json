{
  "name": "root",
  "private": true,
  "description": "A monorepo of Vue and JS packages for Cosmos SDK apps",
  "author": "Ignite, Inc <hello@ignt.com>",
  "homepage": "https://github.com/tendermint/vue",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "scripts": {
    "purge": "npm run purge --workspaces",
    "dev": "npm i; npm run dev --workspace=packages/template",
    "build": "npm run build --workspace=packages/template",
    "lint:check": "eslint .",
    "lint:format": "eslint --fix .",
    "prettify:check": "prettier --check .",
    "prettify:format": "prettier --write .",
    "code:check": "npm run lint:check && npm run prettify:check",
    "code:format": "npm run lint:format && npm run prettify:format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tendermint/vue.git"
  },
  "workspaces": [
    "packages/cosmos-gaia-ts-client",
    "packages/cosmos-gaia-vue-client",
    "packages/vue",
    "packages/template"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
}
